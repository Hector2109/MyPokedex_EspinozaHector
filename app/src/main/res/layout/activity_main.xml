<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pokedex_red"
    tools:context=".MainActivity"
    android:padding="16dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/pokeball"
        android:layout_gravity="center"
        android:contentDescription="Pokeball"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Pokedex"
        android:layout_gravity="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="20dp"/>

    <ListView
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:id="@+id/pokemonList"
        android:background="@drawable/listview_background"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Register PokÃ©mon"
        android:textStyle="bold"
        android:backgroundTint="@color/pokemon_yellow"
        android:textColor="@android:color/black"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:paddingHorizontal="20dp"
        android:id="@+id/btn_addPokemon"
        android:drawablePadding="10dp"/>
</LinearLayout>